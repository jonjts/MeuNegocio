<%= simple_form_for  @cliente, defaults: {label_html: {class: 'form-title form'}}, html: {class: 'form-vertical'} do |f| %>

<% content_for :oi do %>
  <%= f.submit 'Salvar', class: 'btn btn-success btn-lg'%>
      <%unless @cliente.new_record?%>
            <%= link_to 'Remover', cliente_path(@cliente), method: :delete, "data-confirm": 'Remover cliente?', class: "btn btn-danger btn-lg", data: { toggle: "tooltip", placement: "top" },  title: 'Remover' %>
      <% end %>
      <%= link_to 'Voltar', :back, class: 'card-link' %>
<% end %>


<div class="row">
   <div class="col-md-12 col-sm-12 col-lg-12">
      <ul class="form-group list-unstyled">
         <li>
            <div class="card">
               <div class="card-header">
                  <h3 class="card-title">Dados Básicos</h3>
               </div>
               <div class="card-body">
                  <div class="row">
                     <div class="col-md-12 col-sm-12 col-lg-6">
                        <ul class="form-group list-unstyled">
                           <li>
                              <%= f.input :nome, as: :string,input_html: {class: 'form-control' }%>
                           </li>
                        </ul>
                     </div>
                     <div class="col-md-12 col-sm-12 col-lg-3">
                        <ul class="form-group list-unstyled">
                           <li>
                              <%= f.input :rg, as: :integer,input_html: {class: 'form-control rg' }%>
                           </li>
                        </ul>
                     </div>
                     <div class="col-md-12 col-sm-12 col-lg-3">
                        <ul class="form-group list-unstyled">
                           <li>
                              <%= f.input :cpf, as: :string, input_html: {class: 'form-control cpf' }%>
                           </li>
                        </ul>
                     </div>
                  </div>
               </div>
         </li>
      </ul>
      </div>
      <div class="col-md-4 col-sm-12 col-lg-4">
         <ul class="form-group list-unstyled">
            <li>
               <div class="card">
                  <div class="card-header">
                     <h3 class="card-title">Telefones</h3>
                     <div class="card-options">
                        <%= link_to_add_association fa_icon("plus", text: 'Adicionar telefone'), f, :telefones, 'data-association-insertion-node' => "#telefones_container ol", 'data-association-insertion-method' => "append", class: 'btn btn-outline-primary btn-sm' %>
                     </div>
                  </div>
                  <div class="card-body">
                     <div id= 'telefones_container'>
                        <ol>
                           <%= f.fields_for :telefones do |telefone| %>
                           <%= render 'telefone_fields', f: telefone %>
                           <% end %>
                        </ol>
                     </div>
                  </div>
               </div>
            </li>
         </ul>
      </div>
      <div class="col-md-8 col-sm-12 col-lg-8">
         <ul class="form-group list-unstyled">
            <li>
               <div class="card">
                  <div class="card-header">
                     <h3 class="card-title">Endereços</h3>
                     <div class="card-options">
                        <%= link_to_add_association fa_icon("plus", text: 'Adicionar endereco'), f, :enderecos, 'data-association-insertion-node' => "#enderecos_container ol", 'data-association-insertion-method' => "append", class: 'btn btn-outline-primary btn-sm' %>
                     </div>
                  </div>
                  <div class="card-body">
                     <div id= 'enderecos_container'>
                        <ol>
                           <%= f.fields_for :enderecos do |endereco| %>
                           <%= render 'endereco_fields', f: endereco %>
                           <% end %>
                        </ol>
                     </div>
                  </div>
               </div>
            </li>
         </ul>
      </div>
   </div>
</div>

<% end %>